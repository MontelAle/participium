{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "DB_URL",
    "FRONTEND_URL",
    "PORT",
    "BACKEND_URL",
    "SESSION_EXPIRES",
    "COOKIE_HTTP_ONLY",
    "COOKIE_SECURE",
    "COOKIE_SAME_SITE"
  ],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {},
    "test": {},
    "test:e2e": {}
  }
}
