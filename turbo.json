{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "DB_URL",
    "FRONTEND_URL",
    "PORT",
    "BACKEND_URL",
    "SESSION_EXPIRES",
    "COOKIE_HTTP_ONLY",
    "COOKIE_SECURE",
    "COOKIE_SAME_SITE",
    "CORS_ORIGIN"
  ],
  "tasks": {
    "dev": {
      "cache": true,
      "persistent": true,
      "dependsOn": []
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lint": {},
    "test": {
      "cache": false,
      "outputs": ["coverage/**"]
    },
    "test:int": {
      "cache": false
    },
    "test:e2e": {
      "cache": false
    }
  }
}
