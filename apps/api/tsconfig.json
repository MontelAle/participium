{
  "compilerOptions": {
    // 1. CORE SETUP (Required for NestJS to run)
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2022",
    "lib": ["es2022"],
    "baseUrl": "./",
    "outDir": "./dist",

    // 2. MONOREPO LINKING (Required for your shared folder)
    "paths": {
      "@repo/api": ["../../packages/api/src/index"]
    },

    // 3. DECORATORS (Required for TypeORM & NestJS)
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    // 4. INTEROP & BUILD (Standard setup)
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true, // Skips checking .d.ts files in node_modules (faster)
    "sourceMap": true, // needed for debugging

    // 5. TYPE CHECKING (Simplified)
    "strict": true, // Enables all strict rules
    "strictNullChecks": false, // You had this off in your original config
    "noImplicitAny": false // You had this off in your original config
  },
  "include": ["src"]
}
