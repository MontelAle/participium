{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@repo/api/constants$": "<rootDir>/../../../packages/api/src/constants.ts",
    "^@repo/api$": "<rootDir>/../../../packages/api/src/index.ts"
  }
}
