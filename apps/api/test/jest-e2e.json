{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@entities$": "<rootDir>/../src/common/entities/index.ts",
    "^@entities/(.*)$": "<rootDir>/../src/common/entities/$1"
  }
}
