{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".int-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testTimeout": 50000,
  "maxWorkers": 1,
  "forceExit": true,
  "detectOpenHandles": true,
  "moduleNameMapper": {
    "^@entities$": "<rootDir>/../src/common/entities/index.ts",
    "^@entities/(.*)$": "<rootDir>/../src/common/entities/$1"
  }
}
