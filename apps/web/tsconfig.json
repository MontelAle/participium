{
  "extends": "@repo/typescript-config/react-library.json",
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"],
      "@web/types": ["types"],
      "@web/components/*": ["components/*"],
      "@web/hooks/*": ["hooks/*"],
      "@web/contexts/*": ["contexts/*"],
      "@web/lib/*": ["lib/*"]
    },
    "moduleResolution": "bundler",
    "module": "ESNext",
    "lib": ["DOM", "es2021", "DOM.Iterable"],
    "skipLibCheck": true
  }
}
